@{
    ViewData["Title"] = "Students";
}

<div class="row" style="position:relative;">
    <div class="alert alert-success col-12" style="position:absolute; display:none; padding: 25px 25px; z-index:1000;">
        <strong>Success!</strong> Indicates a successful or positive action.
    </div>
</div>

<h1>Students</h1>

<div class="row mb-4">
    <div class="col-sm-10 form-inline">
        <input name="search" class="form-control col-sm-8" />
        <div class="col-sm-2">
            <button class="btn btn-light btn-block" onclick="filter()">Search</button>
        </div>
    </div>
    <div class="col-sm-2">
        <button type="button" onclick="openCreateForm()" class="btn btn-primary float-right"><i class="fas fa-user-plus"></i></button>
    </div>
</div>

<div class="row">
    <div class="text-center my-auto mx-auto spinner">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="col-12" id="students-table"></div>
</div>
